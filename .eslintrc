{
  "extends": "standard",
  "parser": "babel-eslint",
  "rules": {
    "babel/new-cap": "off",
    "no-return-await": "off",
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": 0,
    "new-cap": "error",
    "one-var": "off",
    "no-var": "error",
    "prefer-const": "error",
    "no-const-assign": "error",
    "generator-star-spacing": "off",
    "quote-props": [
      "error",
      "consistent-as-needed"
    ]
  },
  "globals": {
    "LoggerUtil": true
  },
  "env": {
    "es6": true,
    "node": true
  }
}